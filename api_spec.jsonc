}

// 2. Create a user (POST /api/users/)
// Request:
{
    "username": "zw332",

    "name": "Zhan Wu" / null,
    "bio": "Senior major in Math" / null,
    "contactInfo": "zw332@cornell.edu" / null,
    "minPrice": 10 / null,
    "maxPrice": 15 / null,
    "subject": ["Math", "Econ", "Chemistry"] / null,
    "isAvailable": false / null
}
// Response: <HTTP STATUS CODE 201>
{
    "id": 1,
    "username": "zw332",

    "name": "Zhan Wu" / null,
    "bio": "Senior major in Math" / null,
    "contactInfo": "zw332@cornell.edu" / null,
    "minPrice": 10 / null,
    "maxPrice": 15 / null,
    "subject": ["Math", "Econ", "Chemistry"] / null,
    "isAvailable": false / null
}


