{
    "id": 1,
    "username": "zw332",
    "name": "Zhan Wu",
    "bio": "Senior major in Math",
    "contactInfo": "zw332@cornell.edu",
    "minPrice": 15,
    "maxPrice": 15,
    "subject": ["Math", "Econ"],
    "isAvailable": true
}


